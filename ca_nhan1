  <script>
    // nh·ªØng ng∆∞·ªùi tr·ª£ gi√∫p nh·ªè
    document.getElementById('yr').textContent = new Date().getFullYear();

    function handleContact(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();
      // X√°c th·ª±c ƒë∆°n gi·∫£n
      if(!name || !email || !message) return alert('Vui l√≤ng ƒëi·ªÅn ƒë·∫ßy ƒë·ªß th√¥ng tin.');
      // S·ª≠ d·ª•ng mailto l√†m ph∆∞∆°ng √°n d·ª± ph√≤ng ‚Äî b·∫°n c√≥ th·ªÉ thay th·∫ø b·∫±ng API th·ª±c sau
      const subject = encodeURIComponent('Li√™n h·ªá t·ª´ ' + name);
      const body = encodeURIComponent('T·ª´: ' + name + ' (' + email + ')\n\n' + message);
      window.location.href = `mailto:you@example.com?subject=${subject}&body=${body}`;
    }
  </script>

